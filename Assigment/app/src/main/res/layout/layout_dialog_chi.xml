<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/custom_editext">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="Khoản chi"
        android:gravity="center"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:background="#00DAC5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/ed_khoanchi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:hint="Nhập khoản chi"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="20dp"/>

    <EditText
        android:id="@+id/ed_nguoinhan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ed_khoanchi"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:hint="Nhập tên người nhận"
        android:textSize="20dp"
        android:textStyle="bold" />
    <EditText
        android:id="@+id/ed_sotienchi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ed_nguoinhan"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:hint="Nhập số tiền chi"
        android:textSize="20dp"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/spinnerchi"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#FFAFC0"
        android:layout_below="@+id/ed_sotienchi"
        android:layout_marginTop="12dp" />

    <Button
        android:id="@+id/btn_themKC"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spinnerchi"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="#00DAC5"
        android:text="Thêm"
        android:textSize="25dp"
        android:textStyle="bold" />
</RelativeLayout>