<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/custom_editext">


    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="Khoản thu"
        android:gravity="center"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:background="#00DAC5"/>


    <EditText
        android:id="@+id/ed_khoanthu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:hint="Nhập khoản thu"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="20dp"/>

    <EditText
        android:id="@+id/ed_nguoigiao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ed_khoanthu"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:hint="Nhập tên người giao"
        android:textSize="20dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/ed_sotienthu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ed_nguoigiao"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:hint="Nhập số tiền thu"
        android:textSize="20dp"
        android:textStyle="bold" />


    <Spinner
        android:id="@+id/spinnerthu"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#FFAFC0"
        android:layout_below="@+id/ed_sotienthu"
        android:layout_marginTop="19dp" />

    <Button
        android:id="@+id/btn_themKT"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spinnerthu"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="#00DAC5"
        android:text="Thêm"
        android:textSize="25dp"
        android:textStyle="bold" />
</RelativeLayout>